// me faça o exercicio anterior usando o paradigma da orientação a objeto 
#include <iostream>
class myclass
{
    public:
    // um construtor é um método especial, que é chamado automaticamente quando um objeto é instaciado 
    // basta nós criarmos o contrutor com o mesmo nome da class 
    myclass ()
    {
        std::cout << " ola mundo " << std::endl;
    }
    
};

int main()
{
    myclass *myobj = new myclass();
    
    return 0;
}
